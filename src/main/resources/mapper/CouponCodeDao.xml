<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.shopec.dao.CouponCodeDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.shopec.entity.CouponCode">
	    <result column="id" property="id" />
	    <result column="version" property="version" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_date" property="lastModifiedDate" />
        <result column="code" property="code" />
        <result column="is_used" property="isUsed" />
        <result column="used_date" property="usedDate" />
        <association property="coupon" select="net.shopec.dao.CouponDao.find" column="coupon_id" javaType="net.shopec.entity.Coupon" fetchType="lazy"/>
       	<association property="member" select="net.shopec.dao.MemberDao.find" column="member_id" javaType="net.shopec.entity.Member" fetchType="lazy"/>
       	<association property="order" select="net.shopec.dao.OrderDao.findByAttribute" column="{attributeName=coupon_code_id, attributeValue=id}" javaType="net.shopec.entity.Order" fetchType="lazy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        version,
        created_date, last_modified_date, code, is_used, used_date, coupon_id, member_id, 'coupon_code_id'
    </sql>
	
	<!-- 查找实体对象 -->
	<select id="find" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`coupon_code` 
		WHERE
			`id` = #{id}
	</select>
	
	<!-- 查找实体对象集合 -->
	<select id="findSet" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`coupon_code`
		WHERE
			${attributeName} = #{attributeValue}
	</select>
	
	<!-- 根据属性查找实体对象 -->
	<select id="findByAttribute" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`coupon_code`
		WHERE
			${attributeName} = #{attributeValue}
	</select>
	
	<!-- 查找优惠码数量 -->
	<select id="count" resultType="long">
		SELECT
			count(couponCode.id)
		FROM
			`coupon_code` couponCode
		LEFT JOIN `coupon` coupon ON couponCode.coupon_id = coupon.id
		<where>
			<if test="coupon != null">
				AND coupon_id = #{coupon.id}
			</if>
			<if test="member != null">
				AND member_id = #{member.id}
			</if>
			<if test="hasBegun != null">
				<if test="hasBegun == true">
					AND (coupon.begin_date IS NULL OR coupon.begin_date <![CDATA[ <= ]]> NOW())
				</if>
				<if test="hasBegun == false">
					AND (coupon.begin_date IS NOT NULL) AND coupon.begin_date <![CDATA[ > ]]> NOW()
				</if>
			</if>
			<if test="hasExpired != null">
				<if test="hasExpired == true">
					AND (coupon.end_date IS NOT NULL) AND coupon.end_date <![CDATA[ <= ]]> NOW()
				</if>
				<if test="hasExpired == false">
					AND (coupon.end_date IS NULL) AND coupon.end_date <![CDATA[ > ]]> NOW()
				</if>
			</if>
			<if test="isUsed != null">
				AND is_used = #{isUsed}
			</if>
		</where>
	</select>
	
	<!-- 查找优惠码分页 -->
	<select id="findPage" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`coupon_code` couponCode
		<where>
			<if test="member != null">
				AND member_id = #{member.id}
			</if>
		</where>
	</select>
	
	<!-- 保存 -->
	<insert id="save" parameterType="net.shopec.entity.CouponCode">
    	INSERT INTO coupon_code(
			id ,
			created_date ,
			version ,
			code ,
			is_used ,
			used_date ,
			coupon_id ,
			member_id
		) VALUES (
			#{entity.id}, 
			#{entity.createdDate}, 
			#{entity.version}, 
			#{entity.code}, 
			#{entity.isUsed}, 
			#{entity.usedDate}, 
			#{entity.coupon.id}, 
			#{entity.member.id}
		)
  	</insert>
  
  	<!-- 更新 -->
  	<update id="update" parameterType="net.shopec.entity.CouponCode">
    	UPDATE coupon_code
		SET last_modified_date = #{entity.lastModifiedDate},
			version = #{entity.version} + 1,
			is_used = #{entity.isUsed},
			used_date = #{entity.usedDate},
			member_id = #{entity.member.id}
		WHERE
			id = #{entity.id}
		AND version = #{entity.version}
  	</update>
  
</mapper>
