<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.shopec.dao.DistributorDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="net.shopec.entity.Distributor">
	    <result column="id" property="id" />
	    <result column="version" property="version" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_date" property="lastModifiedDate" />
       	<association property="member" select="net.shopec.dao.MemberDao.find" column="member_id" javaType="net.shopec.entity.Member" fetchType="lazy"/>
        <association property="parent" select="find" column="parent_id"  javaType="net.shopec.entity.Distributor" fetchType="lazy"/>
        <collection property="children" select="findSet" column="{attributeValue=id}" ofType="net.shopec.entity.Distributor" fetchType="lazy"/>
        <collection property="distributionCashs" select="net.shopec.dao.DistributionCashDao.findSet" column="{attributeName=distributor_id, attributeValue=id}" ofType="net.shopec.entity.DistributionCash" fetchType="lazy"/>
        <collection property="distributionCommissions" select="net.shopec.dao.DistributionCommissionDao.findSet" column="{attributeName=distributor_id, attributeValue=id}" ofType="net.shopec.entity.DistributionCommission" fetchType="lazy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        distributor.id,
        distributor.version,
        distributor.created_date, distributor.last_modified_date, member_id, parent_id, 'distributor_id'
    </sql>
	
	<!-- 查找实体对象 -->
	<select id="find" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`distributor` distributor
		WHERE
			`id` = #{id}
	</select>
	
	<!-- 查找实体对象集合 -->
	<select id="findSet" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			distributor distributor
		WHERE
			parent_id = #{attributeValue}
	</select>
	
	<!-- 根据属性查找实体对象 -->
	<select id="findByAttribute" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`distributor` distributor
		WHERE
			${attributeName} = #{attributeValue}
	</select>
	
	<!-- 查找实体对象分页 -->
	<select id="selectPage" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List"></include>
		FROM
			`distributor` distributor
		LEFT JOIN `users` member ON distributor.`member_id` = member.`id`
		WHERE
			`dtype` = 'Member'
		<if test="ew.nonEmptyOfWhere == true">
			AND
		</if>
		${ew.sqlSegment}
	</select>
	
	<!-- 保存 -->
	<insert id="save" parameterType="net.shopec.entity.Distributor">
    	INSERT INTO distributor(
			id ,
			created_date ,
			version ,
			member_id ,
			parent_id
		) VALUES (
			#{entity.id}, 
			#{entity.createdDate}, 
			#{entity.version}, 
			#{entity.member.id}, 
			#{entity.parent.id}
		)
  	</insert>
  	
  	<!-- 更新 -->
  	<update id="update" parameterType="net.shopec.entity.Distributor">
   		UPDATE distributor
		SET last_modified_date = #{entity.lastModifiedDate},
			version = #{entity.version} + 1,
			member_id = #{entity.member.id},
			parent_id = #{entity.parent.id}
		WHERE
			id = #{entity.id}
		AND version = #{entity.version}
  	</update>
  
</mapper>
